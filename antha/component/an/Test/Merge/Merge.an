protocol Merge

import (
	"fmt"
	"github.com/antha-lang/antha/antha/anthalib/mixer"
	"github.com/antha-lang/antha/antha/anthalib/wtype"
)

// Input parameters for this protocol (data)
Parameters (
	Vol1 wunit.Volume
	Vol2 wunit.Volume
)

// Physical Inputs to this protocol with types
Inputs (
	Component1 *wtype.LHComponent
	Component2 *wtype.LHComponent
)


// Physical outputs from this protocol with types
Outputs (
	Merged *wtype.LHComponent
)

// Data which is returned from this protocol, and data types
Data ()

Requirements {}

// Conditions to run on startup
Setup {}

// The core process for this protocol, with the steps to be performed
// for every input
Steps {
	var S1,S2 *wtype.LHComponent

	if !Vol1.IsZero(){
		S1=mixer.Sample(Component1, Vol1)
	}else{
		S1=Component1
	}

	if !Vol2.IsZero(){
	S2=mixer.Sample(Component2, Vol2)
	}else{
		S2=Component2
	}

	fmt.Println("S1: ", S1.CName, " Vol: ", S1.Vol, " LOC: ", S1.Loc, " IsSample? ", S1.IsSample())
	fmt.Println("S2: ", S2.CName, " Vol: ", S2.Vol, " LOC: ", S2.Loc, " IsSample? ", S2.IsSample())
	fmt.Println("V1: ", Vol1)
	fmt.Println("V2: ", Vol2)

	Merged=Mix(S1,S2)
}

// Run after controls and a steps block are completed to
// post process any data and provide downstream results
Analysis {
}

// A block of tests to perform to validate that the sample was processed correctly
// Optionally, destructive tests can be performed to validate results on a
// dipstick basis
Validation {
}
